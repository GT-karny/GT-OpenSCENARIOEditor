{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Capability",
  "type": "object",
  "required": [
    "id",
    "domain",
    "title_ja",
    "meaning_ja",
    "purpose_ja",
    "scope_ja",
    "done_definition_ja",
    "verification_steps_ja",
    "required_level",
    "current_level",
    "status",
    "acceptance_criteria_ja",
    "evidence",
    "owner",
    "target_date"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(\\.[a-z0-9_]+)+$"
    },
    "domain": {
      "type": "string",
      "enum": [
        "core",
        "opendrive",
        "ux",
        "3d",
        "sim",
        "backend",
        "mcp",
        "templates",
        "i18n",
        "qa",
        "devops"
      ]
    },
    "title_ja": {
      "type": "string",
      "minLength": 1
    },
    "meaning_ja": {
      "type": "string",
      "minLength": 1
    },
    "purpose_ja": {
      "type": "string",
      "minLength": 1
    },
    "scope_ja": {
      "type": "string",
      "minLength": 1
    },
    "done_definition_ja": {
      "type": "string",
      "minLength": 1
    },
    "verification_steps_ja": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "required_level": {
      "type": "string",
      "enum": ["L0", "L1", "L2", "L3", "L4"]
    },
    "current_level": {
      "type": "string",
      "enum": ["L0", "L1", "L2", "L3", "L4"]
    },
    "status": {
      "type": "string",
      "enum": ["gap", "partial", "done", "blocked"]
    },
    "acceptance_criteria_ja": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "evidence": {
      "type": "object",
      "required": ["impl", "tests"],
      "properties": {
        "impl": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "tests": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "e2e": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "ops": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": false
    },
    "gaps_ja": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "depends_on": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(\\.[a-z0-9_]+)+$"
      }
    },
    "notes_ja": {
      "type": "string"
    },
    "owner": {
      "type": "string",
      "minLength": 1
    },
    "target_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  },
  "additionalProperties": false
}
